@model IEnumerable<aday>

@if (Model.Count()>0)
{
    <h6 class="display">
        Application(@Model.Count())
    </h6>
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>FirstName</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (aday aday in Model)
            {
                <tr>
                    <td>@aday.Email</td>
                    <td>@aday.FirstName</td>
                    <td>@aday.ApplyAt<td>
                    <td>@aday.SelectedCourse</td>
                </tr>
                
            }
        </tbody>
    </table>
    
}
else
{
    <div class="alert alert-info">
        henüz başvuru yok. lütfen buraya 
        <a class="alert-link"asp-action="Apply">tıklayın</a>
    </div>
}